- pageSize = filter.pageFilter.pageSize;
div.modifier
	span.modifier-title #{messageSource.getMessage('search.filters.pagination.modifiers.amount', [], locale)}:&nbsp;
	span.modifier-content #{items.numberOfAvailableResults!=0?items.currentPage*pageSize+1:0} - #{items.currentPage*pageSize+items.numberOfAvailableResults}
	span.modifier-title &nbsp;#{messageSource.getMessage('search.filters.pagination.modifiers.of', [], locale)}&nbsp;
	b #{items.numberOfTotalResults}
div.modifier#modifier-page-size
	span.modifier-title #{messageSource.getMessage('search.filters.pagination.modifiers.showing', [], locale)}&nbsp;
	a.modifier-option(href="#", class="#{pageSize == 20 ? 'selected' : ''}")
		if pageSize == 20
			b 20
		else
			span 20
	div.space
	a.modifier-option(href="#", class="#{pageSize == 40 ? 'selected' : ''}")
		if pageSize == 40
			b 40
		else
			span 40
	div.space
	a.modifier-option(href="#", class="#{pageSize == 100 ? 'selected' : ''}")
		if pageSize == 100
			b 100
		else
			span 100
	div.space
	a.modifier-option(href="#", class="#{pageSize == 200 ? 'selected' : ''}")
		if pageSize == 200
			b 200
		else
			span 200
	span.modifier-title &nbsp; #{messageSource.getMessage('search.filters.pagination.modifiers.perPage', [], locale)}
div.modifier#modifier-order
	span.modifier-title #{messageSource.getMessage('search.filters.order.by', [], locale)}:&nbsp;
	select.form-control.input-xs#modifier-order-input
		if sort.equals('PRICE-ASC')
			option(value="PRICE-ASC", selected) #{messageSource.getMessage('search.filters.order.priceAsc', [], locale)}
		else
			option(value="PRICE-ASC") #{messageSource.getMessage('search.filters.order.priceAsc', [], locale)}
		if sort.equals('PRICE-DESC')
			option(value="PRICE-DESC", selected) #{messageSource.getMessage('search.filters.order.priceDesc', [], locale)}
		else
			option(value="PRICE-DESC") #{messageSource.getMessage('search.filters.order.priceDesc', [], locale)}
		if sort.equals('NAME-ASC')
			option(value="NAME-ASC", selected) #{messageSource.getMessage('search.filters.order.alphabetic', [], locale)}
		else
			option(value="NAME-ASC") #{messageSource.getMessage('search.filters.order.alphabetic', [], locale)}
		if sort.equals('SOLD-ASC')
			option(value="SOLD-ASC", selected) #{messageSource.getMessage('search.filters.order.soldAsc', [], locale)}
		else
			option(value="SOLD-ASC") #{messageSource.getMessage('search.filters.order.soldAsc', [], locale)}
		if sort.equals('SOLD-DESC')
			option(value="SOLD-DESC", selected) #{messageSource.getMessage('search.filters.order.soldDesc', [], locale)}
		else
			option(value="SOLD-DESC") #{messageSource.getMessage('search.filters.order.soldDesc', [], locale)}