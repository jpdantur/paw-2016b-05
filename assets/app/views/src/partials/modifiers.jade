div.row.text-right#modifiers
	div.col-sm-12
		div.modifier(ng-show="all.itemsLoading")
			div.modifier-title
				i.fa.fa-spin.fa-spinner.fa-fw.fa-2x
				span &nbsp;Loading...
		div.modifier
			span.modifier-title #{messageSource.getMessage('search.filters.pagination.modifiers.amount', [], locale)}:&nbsp;
			span.modifier-content {{all.itemResult.numberOfAvailableResults != 0 ? all.itemResult.currentPage * all.itemResult.pageSize + 1 : 0}} - {{all.itemResult.currentPage * all.itemResult.pageSize + all.itemResult.numberOfAvailableResults}}
			span.modifier-title &nbsp;#{messageSource.getMessage('search.filters.pagination.modifiers.of', [], locale)}&nbsp;
			b {{all.itemResult.numberOfTotalResults}}
		div.modifier#modifier-page-size
			span.modifier-title #{messageSource.getMessage('search.filters.pagination.modifiers.showing', [], locale)}&nbsp;
			a.modifier-option(ng-class="{selected: all.itemResult.pageSize === 20}", ng-click="all.updateItemsQuery({pageNumber: 0, pageSize: 20})")
				b(ng-show="all.itemResult.pageSize === 20") 20
				span(ng-show="all.itemResult.pageSize !== 20") 20
			div.space
			a.modifier-option(ng-class="{selected: all.itemResult.pageSize === 40}", ng-click="all.updateItemsQuery({pageNumber: 0, pageSize: 40})")
				b(ng-show="all.itemResult.pageSize === 40") 40
				span(ng-show="all.itemResult.pageSize !== 40") 40
			div.space
			a.modifier-option(ng-class="{selected: all.itemResult.pageSize === 100}", ng-click="all.updateItemsQuery({pageNumber: 0, pageSize: 100})")
				b(ng-show="all.itemResult.pageSize === 100") 100
				span(ng-show="all.itemResult.pageSize !== 100") 100
			div.space
			a.modifier-option(ng-class="{selected: all.itemResult.pageSize === 200}", ng-click="all.updateItemsQuery({pageNumber: 0, pageSize: 200})")
				b(ng-show="all.itemResult.pageSize === 200") 200
				span(ng-show="all.itemResult.pageSize !== 200") 200
			span.modifier-title &nbsp; #{messageSource.getMessage('search.filters.pagination.modifiers.perPage', [], locale)}
		div.modifier#modifier-order
			span.modifier-title #{messageSource.getMessage('search.filters.order.by', [], locale)}:&nbsp;
			select.form-control.input-xs#modifier-order-input(ng-model="all.itemsOrder", ng-change="all.onItemsOrderChange()")
				option(value="PRICE-ASC") #{messageSource.getMessage('search.filters.order.priceAsc', [], locale)}
				option(value="PRICE-DESC") #{messageSource.getMessage('search.filters.order.priceDesc', [], locale)}
				option(value="NAME-ASC") #{messageSource.getMessage('search.filters.order.alphabetic', [], locale)}
				option(value="SOLD-ASC") #{messageSource.getMessage('search.filters.order.soldAsc', [], locale)}
				option(value="SOLD-DESC") #{messageSource.getMessage('search.filters.order.soldDesc', [], locale)}