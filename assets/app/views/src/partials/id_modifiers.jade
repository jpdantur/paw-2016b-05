div.modifier
	span.modifier-title #{messageSource.getMessage('search.filters.pagination.modifiers.amount', [], locale)}:&nbsp;
	span.modifier-content {{id.itemResult.numberOfAvailableResults != 0 ? id.itemResult.currentPage * id.itemResult.pageSize + 1 : 0}} - {{id.itemResult.currentPage * id.itemResult.pageSize + id.itemResult.numberOfAvailableResults}}
	span.modifier-title &nbsp;#{messageSource.getMessage('search.filters.pagination.modifiers.of', [], locale)}&nbsp;
	b {{id.itemResult.numberOfTotalResults}}
div.modifier#modifier-page-size
	span.modifier-title #{messageSource.getMessage('search.filters.pagination.modifiers.showing', [], locale)}&nbsp;
	a.modifier-option(ng-class="{selected: id.itemResult.pageSize === 20}", ng-click="id.updateItemsQuery({pageNumber: 0, pageSize: 20})")
		b(ng-show="id.itemResult.pageSize === 20") 20
		span(ng-show="id.itemResult.pageSize !== 20") 20
	div.space
	a.modifier-option(ng-class="{selected: id.itemResult.pageSize === 40}", ng-click="id.updateItemsQuery({pageNumber: 0, pageSize: 40})")
		b(ng-show="id.itemResult.pageSize === 40") 40
		span(ng-show="id.itemResult.pageSize !== 40") 40
	div.space
	a.modifier-option(ng-class="{selected: id.itemResult.pageSize === 100}", ng-click="id.updateItemsQuery({pageNumber: 0, pageSize: 100})")
		b(ng-show="id.itemResult.pageSize === 100") 100
		span(ng-show="id.itemResult.pageSize !== 100") 100
	div.space
	a.modifier-option(ng-class="{selected: id.itemResult.pageSize === 200}", ng-click="id.updateItemsQuery({pageNumber: 0, pageSize: 200})")
		b(ng-show="id.itemResult.pageSize === 200") 200
		span(ng-show="id.itemResult.pageSize !== 200") 200
	span.modifier-title &nbsp; #{messageSource.getMessage('search.filters.pagination.modifiers.perPage', [], locale)}
div.modifier#modifier-order
	span.modifier-title #{messageSource.getMessage('search.filters.order.by', [], locale)}:&nbsp;
	select.form-control.input-xs#modifier-order-input(ng-model="id.itemsOrder", ng-change="id.onItemsOrderChange()")
		option(value="PRICE-ASC") #{messageSource.getMessage('search.filters.order.priceAsc', [], locale)}
		option(value="PRICE-DESC") #{messageSource.getMessage('search.filters.order.priceDesc', [], locale)}
		option(value="NAME-ASC") #{messageSource.getMessage('search.filters.order.alphabetic', [], locale)}
		option(value="SOLD-ASC") #{messageSource.getMessage('search.filters.order.soldAsc', [], locale)}
		option(value="SOLD-DESC") #{messageSource.getMessage('search.filters.order.soldDesc', [], locale)}