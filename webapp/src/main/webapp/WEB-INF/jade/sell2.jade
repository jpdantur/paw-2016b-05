extends layout

block scripts
	script(src="#{context.url('/resources/js/lib/dropzone.js')}", type="text/javascript")
	script.
		Dropzone.options.autoDiscover = false;
		Dropzone.autoDiscover = false;

		$(document).ready(function () {

			var dropzone = new Dropzone('#dropzone', {
				url: "#{context.url('/images/'+item.id+'/upload')}",
				acceptedFiles: 'image/*',
				addRemoveLinks: true,
				autoProcessQueue: false,
				paramName: function () {
					return 'images';
				}
				//- dictDefaultMessage: '' // <---- rellenar con messageSource.getMessage
			});

			$dropzone = $('#dropzone');

			$dropzone.addClass('dropzone')

			$('#uploadImages').click(function (e) {
				e.preventDefault();
				
				dropzone.processQueue();

			})
			
		});

		//- var dropzone = new Dropzone('div#dropzone', {
		//- 	url: "#{context.url('/')}"
		//- });
	script(src="#{context.url('/resources/js/sell.js')}", type="text/javascript")

block styles
	link(href="#{context.url('/resources/css/dropzone.css')}", rel="stylesheet")

block content
	include partials/navbar-with-search
	div.container
		div.row
			div.col-sm-10.col-sm-offset-1
				h1 Subir fotos para `#{item.name}`
				form.form-horizontal(method="POST",action="#{context.url('/images/'+item.id+'/upload')}", enctype="multipart/form-data")
					div.form-group
						label.col-sm-2.control-label #{messageSource.getMessage('sell.field.pictures',[],locale)}
						div.col-sm-10
							//-input(name="images", type="file")
							div#dropzone
								div.fallback
									input(name="images", type="file", multiple)
					div.form-group
						div.col-sm-2.col-sm-offset-2
							a.btn.btn-default.btn-block(href="#{context.url('/')}")
								i.fa.fa-chevron-left
								| &nbsp;#{messageSource.getMessage('sell.back',[],locale)}
						div.col-sm-4.col-sm-offset-4
							button.btn.btn-success.btn-block#uploadImages(type="submit") #{messageSource.getMessage('sell.ok',[],locale)}
					
					