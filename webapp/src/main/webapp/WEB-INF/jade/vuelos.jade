									div.origen-container.col-sm-4
										span.origen
									div.escala-container.col-sm-4
										span.horas
										br
										span.escalas
									div.destino-container.col-sm-4
										span.destino
								div.review-score-container
									span Puntaje: &nbsp;
									div.review-score(title='Ver Puntaje')
										i.fa.fa-pulse.fa-2x.fa-spinner.fa-fw
										span(style="font-size:10px") Cargando Puntaje del Vuelo
						


					div.col-sm-2.precios
						div.with-divider.clearfix
							div.col-sm-5
								b Precio por Adulto
							div.col-sm-7.text-right
								span.currency-symbol
								span.precio-por-adulto $7.199,00

						div.adultos.clearfix
							div.col-sm-5
								b.n-adultos 1 Adulto
							div.col-sm-7.text-right
								span.currency-symbol
								span.total-adultos $7.199,00
						div.clearfix
							div.col-sm-5
								b Imp y Tasas
							div.col-sm-7.text-right
								span.currency-symbol
								span.impuestos $173.69
						div.with-divider.clearfix
							div.col-sm-5
								b Cargos
							div.col-sm-7.text-right
								span.currency-symbol
								span.cargos $173.69
						div.clearfix
							div.col-sm-5
								b Total
							div.col-sm-7.text-right
								span.currency-symbol
								span.total $9000,00

						a.btn.btn-success.btn-block.buy-flight(href="#") Comprar Vuelo

					div.vuelo-footer.col-sm-12
